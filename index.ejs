                        <span id="selected-image-text"></span>
                        <button type="submit" class="subir-button">Subir imagen</button>
                    </form>
                </div>

                <div class="delete-form">
                    <form action="/eliminar-todo" method="POST">
                        <button type="submit" class="delete-button" id="delete-button">üóëÔ∏è</button>
                    </form>
                </div>
            </div>

            <!-- <% files.forEach(function(file) { %>
                <img class="image" src="/uploads/<%= file %>" alt="Uploaded Image">
                <% }) %> -->

            <% if (files && files.length> 0) { %>
                <h2>Galer√≠a</h2>
                <div class="image-galeria">
                    <% files.forEach(function(file) { %>
                        <a href="/imagen/<%= file %>" target="_blank">
                            <img class="image" src="/uploads/<%= file %>" alt="Imagen cargada">
                        </a>
                        <% }) %>
                </div>
                <% } %>

                    <script>
                        const deleteButton = document.getElementById('delete-button');
                        deleteButton.addEventListener('click', function () {
                            deleteButton.innerText = 'üëç';
                        });

                        function showSelectedImage(input) {
                            const file = input.files[0];
                            const selectedImageText = document.getElementById('selected-image-text');

                            if (file) {
                                selectedImageText.textContent = `${file.name}`;
                            } else {
                                selectedImageText.textContent = '';
                            }
                        }

                    </script>
